<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource,missingConstraints"
    tools:layout_editor_absoluteX="279dp"
    tools:layout_editor_absoluteY="4dp">


    <Button
        android:id="@+id/implicit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/black"
        android:text="@string/implicit_intents"
        app:layout_constraintStart_toEndOf="@+id/counterTextView"
        app:layout_constraintTop_toBottomOf="@+id/shoppingListButton"
        tools:ignore="VisualLintBounds" />

    <TextView
        android:id="@+id/helloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:text="Hello World!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shoppingListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/black"
        android:text="@string/shopping_n_list_activity"
        app:layout_constraintStart_toEndOf="@+id/counterTextView"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_button"
        tools:ignore="VisualLintBounds" />

    <Button
        android:id="@+id/passageThirdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/third_passage"
        android:textColor="#5E35B1"
        app:layout_constraintStart_toEndOf="@+id/intent_activity_button"
        app:layout_constraintTop_toBottomOf="@+id/passageSecondButton"
        tools:ignore="VisualLintBounds" />

    <Button
        android:id="@+id/passageSecondButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/second_passage"
        android:textColor="#5E35B1"
        app:layout_constraintStart_toEndOf="@+id/intent_activity_button"
        app:layout_constraintTop_toBottomOf="@+id/passageFirstButton"
        tools:ignore="VisualLintBounds" />

    <Button
        android:id="@+id/passageFirstButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/first_passage"
        android:textColor="#5E35B1"
        app:layout_constraintStart_toEndOf="@+id/intent_activity_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds" />

    <Button
        android:id="@+id/toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="@string/toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#C7CDCD"
        android:text="@string/zero"
        android:textColor="#006064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toast" />

    <Button
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/count"
        android:textColor="#5E35B1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zero" />

    <Button
        android:id="@+id/intent_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EC0F0F"
        android:text="@string/hello_activity"
        app:layout_constraintStart_toEndOf="@+id/counterTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#ECAD0F"
        android:text="@string/edittext_activity"
        android:textColor="#5D4037"
        app:layout_constraintStart_toEndOf="@+id/counterTextView"
        app:layout_constraintTop_toTopOf="@+id/intent_activity_button" />

    <TextView
        android:id="@id/counterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/_0"
        android:textColor="@color/black"
        android:textSize="145sp"
        app:layout_constraintStart_toEndOf="@+id/toast"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#3F51B4"
        android:gravity="center"
        android:text="@string/article_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/counterTextView"
        app:layout_constraintTop_toBottomOf="@+id/counterTextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/article_subtitle"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/article_text"
                tools:ignore="VisualLintLongText" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
